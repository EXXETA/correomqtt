<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import org.controlsfx.control.CheckListView?>
<HBox fx:id="stepHolder"
      prefHeight="450.0" prefWidth="800.0" stylesheets="@../css/exportconnections.css"
      VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.correomqtt.gui.controller.ConnectionImportStepConnectionsViewController">

    <VBox maxWidth="200.0" minWidth="200.0" HBox.hgrow="ALWAYS">
        <CheckListView fx:id="connectionsListView" VBox.vgrow="ALWAYS"/>
    </VBox>
    <VBox minWidth="450.0" HBox.hgrow="ALWAYS">
        <GridPane VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
            <VBox.margin>
                <Insets left="10.0"/>
            </VBox.margin>
            <VBox>
                <Label styleClass="settingsLabel" text="%connectionImportConnectionsLabel"/>
                <Label text="%connectionImportConnectionsDescription" wrapText="true">
                    <styleClass>
                        <String fx:value="secondaryText"/>
                        <String fx:value="settingsDescription"/>
                    </styleClass>
                </Label>
                <HBox>
                    <Button minHeight="25.0" minWidth="30.0" mnemonicParsing="false" onAction="#checkAll"
                            text="%exportConnectionsSelectAll">
                        <HBox.margin>
                            <Insets right="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button minHeight="25.0" minWidth="30.0" mnemonicParsing="false" onAction="#checkNone"
                            text="%exportConnectionsSelectNone">
                        <HBox.margin>
                            <Insets right="5.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>
        </GridPane>
        <HBox alignment="BOTTOM_RIGHT" minWidth="30.0" VBox.vgrow="ALWAYS">
            <Button minHeight="25.0" minWidth="30.0" mnemonicParsing="false" onAction="#onCancelClicked"
                    text="%commonCancelButton">
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </Button>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS"/>
            <Button minHeight="25.0" minWidth="30.0" mnemonicParsing="false" onAction="#onConnectionsBackClicked"
                    text="%commonBackButton">
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </Button>
            <Button minHeight="25.0" minWidth="30.0" mnemonicParsing="false" onAction="#goImportFinalStep"
                    text="%connectionImportFinalButton">
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </Button>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>

        </HBox>
    </VBox>
</HBox>