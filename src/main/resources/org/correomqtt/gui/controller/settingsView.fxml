<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="550.0" styleClass="dialog" stylesheets="@../css/settings.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.correomqtt.gui.controller.SettingsViewController">
    <VBox styleClass="settingsHolder" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label alignment="TOP_LEFT" styleClass="headline" text="%settingsViewHeaderLabel" />
            <GridPane styleClass="settingsGrid" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints minHeight="20.0" vgrow="SOMETIMES" />
               <RowConstraints />
               <RowConstraints />
                </rowConstraints>
                <children>
                    <VBox>
                        <children>
                            <Label styleClass="settingsLabel" text="%settingsViewThemeLabel" />
                            <Label text="%settingsViewThemeExplanationLabel" wrapText="true">
                                <styleClass>
                                    <String fx:value="secondaryText" />
                                    <String fx:value="settingsDescription" />
                                </styleClass>
                            </Label>
                        </children>
                    </VBox>
                    <ComboBox fx:id="themeComboBox" onAction="#onThemeChanged" styleClass="themeCheckbox" GridPane.columnIndex="1" />

                    <VBox prefWidth="294.0" GridPane.rowIndex="1">
                        <children>
                            <Label styleClass="settingsLabel" text="%settingsViewLanguageLabel" />
                            <Label text="%settingsViewLangularExplanationLabel" wrapText="true">
                                <styleClass>
                                    <String fx:value="secondaryText" />
                                    <String fx:value="settingsDescription" />
                                </styleClass>
                            </Label>
                        </children>
                    </VBox>
                    <ComboBox fx:id="languageComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <VBox GridPane.rowIndex="2">
                        <children>
                            <Label styleClass="settingsLabel" text="%settingsViewKeyringBackendLabel" />
                            <Label text="%settingsViewKeyringBackendExplanationLabel" wrapText="true">
                                <styleClass>
                                    <String fx:value="secondaryText" />
                                    <String fx:value="settingsDescription" />
                                </styleClass>
                            </Label>
                        </children>
                    </VBox>
                        <ComboBox fx:id="keyringBackendComboBox" onAction="#onKeyringBackendChanged" styleClass="keyringBackendCheckbox" GridPane.columnIndex="1" GridPane.rowIndex="2" />


                    <Button onAction="#onWipeKeyringClicked" styleClass="wipeKeyringButton" text="%wipeCurrentKeyring" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />


                    <VBox GridPane.rowIndex="5">
                        <children>
                            <Label styleClass="settingsLabel" text="%settingsViewUpdateLabel" />
                            <Label text="%settingsViewUpdatesExplanationLabel" wrapText="true">
                                <styleClass>
                                    <String fx:value="secondaryText" />
                                    <String fx:value="settingsDescription" />
                                </styleClass>
                            </Label>
                        </children>
                    </VBox>
                    <CheckBox fx:id="searchUpdatesCheckbox" layoutX="422.0" layoutY="10.0" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.valignment="TOP">
                        <padding>
                            <Insets top="7.0" />
                        </padding>
                    </CheckBox>
                </children>
            </GridPane>
            <HBox alignment="CENTER_RIGHT">
                <children>
                    <Button fx:id="settingsCancelButton" mnemonicParsing="false" onAction="#onCancelClicked" text="%commonCancelButton">
                        <HBox.margin>
                            <Insets left="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="settingsSaveButton" mnemonicParsing="false" onAction="#onSaveClicked" text="%commonSaveButton">
                        <HBox.margin>
                            <Insets left="5.0" />
                        </HBox.margin>
                    </Button>
                </children>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </HBox>
        </children>
    </VBox>
</AnchorPane>
