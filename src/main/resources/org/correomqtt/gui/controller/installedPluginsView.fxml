<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="installedPluginsRootPane" minHeight="200.0" minWidth="400.0" prefHeight="500.0" prefWidth="1000.0" styleClass="dialog" stylesheets="@../css/settings.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.correomqtt.gui.controller.InstalledPluginsViewController">
    <SplitPane dividerPositions="0.4" prefHeight="160.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
        <items>
            <AnchorPane minHeight="200.0" minWidth="200.0">
                <children>
                    <ListView fx:id="installedPluginList" minHeight="200.0" minWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>
            <AnchorPane minHeight="200.0" minWidth="200.0">
                <children>
                    <VBox fx:id="description" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <children>
                            <Label fx:id="pluginName" alignment="TOP_LEFT" styleClass="headline" text="Name" />
                            <Label fx:id="pluginDescription" text="Description">
                                <VBox.margin>
                                    <Insets bottom="20.0" />
                                </VBox.margin>
                            </Label>
                            <Label fx:id="pluginProvider" text="Provider">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin></Label>
                            <Label fx:id="pluginInstalledVersion" text="Installed Version">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin></Label>
                            <Label fx:id="pluginLicense" text="License">
                                <VBox.margin>
                                    <Insets bottom="10.0" />
                                </VBox.margin>
                            </Label>
                            <Label fx:id="pluginPath" text="Path">
                                <VBox.margin>
                                    <Insets bottom="10.0" />
                                </VBox.margin>
                            </Label>


                            <Pane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                     <HBox>
                        <children>
                           <Button fx:id="pluginDisableToggleBtn" mnemonicParsing="false" onAction="#onDisableToggle" text="Disable" />
                           <Pane HBox.hgrow="ALWAYS" />
                           <Button fx:id="pluginUninstallBtn" mnemonicParsing="false" onAction="#onUninstall" text="%uninstall" />
                        </children>
                     </HBox>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                        </padding>
                    </VBox>

                </children>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </AnchorPane>
        </items>
    </SplitPane>
</AnchorPane>
